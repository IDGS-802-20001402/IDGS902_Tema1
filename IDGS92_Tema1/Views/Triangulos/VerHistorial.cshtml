
@{
    ViewBag.Title = "VerHistorial";
}

<div class="row justify-content-center">
    <div class="col-10">
        <div class="card">
            <div class="card-header">
                <h4>Historial</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Punto 1</td>
                            <td>Punto 2</td>
                            <td>Punto 3</td>
                            <td>Distancia Lado 1</td>
                            <td>Distancia Lado 2</td>
                            <td>Distancia Lado 3</td>
                            <td>Tipo</td>
                            <td>Area</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Lista)
                        {
                            <tr>
                                <td>(@item.Split(',')[0], @item.Split(',')[1])</td>
                                <td>(@item.Split(',')[2], @item.Split(',')[3])</td>
                                <td>(@item.Split(',')[4], @item.Split(',')[5])</td>
                                <td>@item.Split(',')[6] </td>
                                <td>@item.Split(',')[7]</td>
                                <td>@item.Split(',')[8]</td>
                                <td>@item.Split(',')[9]</td>
                                <th>@item.Split(',')[10]</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>